<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    <div class="box">
        <% newListItem.forEach(function(item){ %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" value= "<%= item._id %>" onChange="this.form.submit()" name="checkedBox">
                <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle%>"></input>
    </form>
        <% }) %>
        <form class="item" action="/" method="post">
            <input type="text" name="nextItem" placeholder="Add new item" autocomplete="off">
            <button type="submit" name="submitButton" value= <%= listTitle %>>+</button>
        </form>
    </div>
